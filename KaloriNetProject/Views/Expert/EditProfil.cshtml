@model EntityLayer.Concrete.Expert


@{
    ViewData["Title"] = "EditProfil";
    Layout = "~/Views/Shared/ExpertLayout.cshtml";
}





<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            @using (Html.BeginForm("EditProfil", "Expert", FormMethod.Post))
            {

            <h4 class="card-title">Profil Güncelleme</h4>
                <p class="card-description"> </p>
                <form class="forms-sample">
                    <div class="form-group">
                        
                        @Html.TextBoxFor(x => x.ExpertID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Isim</label>
                        @Html.TextBoxFor(x => x.ExpertName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Sifre</label>
                        @Html.TextBoxFor(x => x.ExpertPassword, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Alan</label>
                        @Html.TextBoxFor(x => x.ExpertBranch, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Sosyal Medya</label>
                        @Html.TextBoxFor(x => x.ExpertSocial, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Hakkinda</label>
                        @Html.TextBoxFor(x => x.ExpertAbout, new { @class = "form-control" })
                    </div>



                    <div class="form-group">
                        <label>File upload</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Yukle</button>
                            </span>
                        </div>
                    </div>


                    <button type="submit" class="btn btn-gradient-primary mr-2">Bilgilerimi Guncelle</button>
                    <button class="btn btn-light">Vazgec</button>
                </form>
            }
        </div>
    </div>
</div>
