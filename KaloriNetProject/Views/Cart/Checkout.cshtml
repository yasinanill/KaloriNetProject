
@model DailyRecordModel
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
<hr />
<h1 class="row" style="margin-left:180px; margin-top:40px; ">Kontrol</h1>
<hr />
<div class="row" style="margin-left:160px; margin-top:40px;   flex-wrap:wrap">
    <div class="col-md-8">
        <h4 class="mb-3">Gününüz Hakkında Eklemeler </h4>
        <form asp-controller="Cart" asp-action="Checkout" method="post">
            <div class="row">
                <div  class="col-md-6 mb-3">
                    <label  asp-for="@Model.RecordNote">Notunuz </label>
                    <input asp-for="@Model.RecordNote" value="" class="form-control" />
                </div>

            </div>


            <button type="submit" class="btn btn-primary ">Kaydet</button>
        </form>
    </div>
    <div class="col-md-2 mb-4">

        <h4 class="mb-3">
            <span class="text-muted">Ekledikleriniz</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.CartModel.CartItem)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6 class="my-0">
                            @item.Name
                        <small>x @item.Quantity</small>
                    </h6>
                </div>
                <span class="text-muted">@item.Calorie </span>
            </li>
        }
            <li class="list-group-item d-flex justify-content-between">
                <span>Toplam Kalori</span>
                <strong>@Model.CartModel.TotalCalorie()</strong>
            </li>
        </ul>

    </div>
</div>