@model IEnumerable<EntityLayer.Concrete.Expert>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<section id="team" class="team section-bg">
    <div class="container">

        <div class="section-title" data-aos="fade-up">
            <h2>Uzmanlar</h2>
            <p>UZMANLARIN TAVSİYESİ İLE DİYETİNİZİ ZEVKLİ HALE GETİRELİM</p>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {


                <div class="col-lg-3 col-md-6 d-flex align-items-stretch">
                    <div class="member" data-aos="fade-up" data-aos-delay="100">
                        <div class="member-img">
                            <img src="~/KTema/assets/img/avatar.jpg" class="img-fluid" alt="">
                            <div class="social">
                                <a href="@item.ExpertSocial"><i class="bi bi-twitter"></i></a>

                                <a href="@item.ExpertSocial3"><i class="bi bi-instagram"></i></a>
                            </div>
                        </div>
                        <div class="member-info">
                            <h4>@item.ExpertName</h4>
                            <span>@item.ExpertBranch</span>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section>