                                    <th scope="col" class="border-0 bg-light">
                                        <div class="py-2 text-uppercase">Ekle</div>

                                    </th>
                                </tr>
                            </thead>
                            @foreach (var k in Model)
                            {

                                <tbody>



                                    <tr>
                                        <th scope="row" class="border-0">
                                            <div class="p-2">
                                                <img src="@k.Image" alt="" width="70" class="img-fluid rounded shadow-sm">
                                                <div class="ml-3 d-inline-block align-middle">
                                                    <h5 class="mb-0"> <a href="/Food/Details/@k.ID" class="text-dark d-inline-block align-middle">@k.Name</a>
                                                        </h5><span class="text-muted font-weight-normal font-italic d-block">
                                                 @*@k.Description.Substring(0, k.Description.Substring(0, 50).LastIndexOf(""))...</span>*@
                                                </div>
                                            </div>
                                        </th>
                                        <td class="border-0 align-middle"><strong>@k.Calorie</strong></td>

                                        <td class="border-0 align-middle"><strong>@k.amount</strong></td>




                                        <td class="border-0 align-middle">
                                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
                                                <input type="hidden" name="productId" value="@k.ID" />
                                                <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width:50px;" />
                                                <button type="submit" class="btn btn-primary">
                                                    Ekle
                                                </button>


                                            </form>

                                        </td>



                                    </tr>



                                </tbody>
                            }
                        </table>
                    </div>

                </div>
            </div>



        </div>
    </div>
